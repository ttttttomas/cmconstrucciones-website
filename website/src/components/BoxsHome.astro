<script>
    import { CountUp } from "countup.js";

    function Counters(id: string, duration: number) {
        const counter = document.getElementById(id);
        
        if (counter) {
            const countUp = new CountUp(counter, duration);
            
            if (!countUp.error) {
                countUp.start();
            } else {
                console.error(countUp.error);
            }
        } else {
            console.error("El elemento con id 'counter' no fue encontrado.");
        }

    }
    Counters("counter-years", 25);
    Counters("counter-works", 500);
    Counters("counter-quality", 100);
</script>
